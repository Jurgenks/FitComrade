@page
@model FitComrade.Pages.Shop.CartModel
@{
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>

    <h3>Winkelmand</h3>
    <form method="post" asp-page="cart" asp-page-handler="update">
        <table class="table">
            <tr>
                <th></th>
                <th>ArtikelNr.</th>
                <th>Product</th>
                <th>Photo</th>
                <th>Prijs</th>
                <th>Aantal <input type="submit" value="Update" /></th>
                <th>Totaalprijs</th>
            </tr>
            @foreach (var item in Model.cart)
            {
                <tr align="center">
                    <td align="center">
                        <a asp-page="cart" asp-page-handler="delete" asp-route-id="@item.Products.ID">Verwijder</a>
                    </td>
                    <td>@item.Products.ID</td>
                    <td>@item.Products.ProductName</td>
                    <td><img src="~/images/FitComrade logo.png" width="100" height="100" /></td>
                    <td>$@item.Products.SellPrice</td>
                    <td><input type="number" name="quantities" value="@item.Quantity" min="1" style="width: 50px;" /></td>
                    <td>
                        $@(item.Products.SellPrice * item.Quantity)
                    </td>
                </tr>
            }
            <tr>
                <td colspan="6" align="right">Totaal</td>
                <td align="center">$@Model.Total</td>
                <td>
                    <a asp-page="Checkout">Betaal</a>
                </td>
            </tr>
        </table>
    </form>
    <a asp-page="index">Doorgaan met winkelen</a>
    
</body>
</html>