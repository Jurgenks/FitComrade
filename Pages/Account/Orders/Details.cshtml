                <th>
                    @Html.DisplayNameFor(item => item.OrderDetail[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(item => item.OrderDetail[0].Total)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetail)
            {
                <tr>
                    <td>
                        Art. @Html.DisplayFor(modelItem => item.ProductID), @Html.DisplayFor(modelItem => modelItem.Products[item.ProductID -1].ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
