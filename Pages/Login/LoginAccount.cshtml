@page
@model FitComrade.Pages.Login.LoginAccountModel

@{
    ViewData["Title"] = "LoginAccount";
    
}

<h1>Sign In Account</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LogOnModel.UserName" class="control-label"></label>
                <input asp-for="LogOnModel.UserName" class="form-control" />
                <span asp-validation-for="LogOnModel.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LogOnModel.Password" class="control-label"></label>
                <input asp-for="LogOnModel.Password" class="form-control" />
                <span asp-validation-for="LogOnModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LogOnModel.RememberMe" /> @Html.DisplayNameFor(model => model.LogOnModel.RememberMe)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Terug</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
  